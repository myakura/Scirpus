{
  "manifest_version": 2,
  "name": "Scirpus",
  "version": "0.5.16",

  "description": "AMPlify your browsing experience.",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },

  "permissions": [
    "tabs",
    "contextMenus"
  ],

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "exclude_matches": [
        "https://www.google.com/*",
        "https://www.google.co.jp/*",
        "https://www.amazon.com/*",
        "https://www.amazon.co.jp/*",
        "https://www.facebook.com/*",
        "https://twitter.com/*",
        "https://youtube.com/*",
        "https://*.wikipedia.org/*"
      ],
      "exclude_globs": [
        "*.js", "*.css", "*.txt",
        "*.png", "*.jpg", "*.jpeg", "*.webp",
        "*.mp4", "*.webm",
        "*.pdf"
      ],
      "js": ["scirpus_content.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "icons/19-disabled.png",
      "38": "icons/38-disabled.png"
    }
  },

  "background": {
    "scripts": ["scirpus_background.js"],
    "persistent": false
  }
}
